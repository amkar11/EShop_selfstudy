@model PasswordRequestViewModel

<form asp-controller="PasswordReset" asp-action="ResetPassword">
	<div class="mb-3">
		<label for="passwordReset" class="form-label" asp-for="Email">Email</label>
		<input type="email" class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")" id="passwordReset" asp-for="Email" aria-describedby="emailHelp" />
		<span asp-validation-for="Email" class="invalid-feedback"></span>
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>
</form>