@model RegistrationConfirmation

<form asp-controller="PasswordReset" asp-action="ConfirmPasswordReset">
	<div class="mb-3">
		<label for="confirmCode" asp-for="ConfirmationCode" class="form-label">Confirmation code</label>
		<input id="confirmCode" asp-for="ConfirmationCode" type="text" class="form-control @(ViewData.ModelState["ConfirmationCode"]?.Errors.Count > 0 ? "is-invalid" : "")" />
		<span asp-validation-for="ConfirmationCode" class="invalid-feedback"></span>
		<div id="confirmCodeHelp" class="form-text">Enter here the code sent you in email</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	 </div>
</form>