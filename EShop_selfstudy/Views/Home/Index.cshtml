@model HomeViewModel
<div class="container-fluid p-0">
    <div id="carouselHome" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="2000">
                <img src="~/img/bmw.jpg" class="d-block w-100" alt="BMW">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="~/img/fiesta.jpg" class="d-block w-100" alt="Ford Fiesta">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="~/img/mercedes.jpg" class="d-block w-100" alt="Mercedes">
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselHome" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselHome" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
    </div>
    </div>
</div>

<div class="container">
<h1>Best cars</h1>
<div class="row mt-5 mb-2">
    @{
        foreach (Car car in Model.favCars)
        {
            @await Html.PartialAsync("AllCars", car);
        }
    }
</div>
</div>


